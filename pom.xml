                <artifactId>maven-jar-plugin</artifactId>
                <version>2.5</version>
                <configuration>
                    <finalName>ChameleonDisguise ${version}</finalName>
                    <outputDirectory>C:\Users\Christopher\Desktop\Testing\ServerTest\plugins</outputDirectory>
                    <forceCreation>true</forceCreation>
                    <archive>
                        <addMavenDescriptor>false</addMavenDescriptor>
                        <manifestEntries>
                            <Built-By>Nogtail</Built-By>
                        </manifestEntries>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>